<Window x:Name="wDialog" x:Class="Dialog1.Window1"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

    xmlns:local="clr-namespace:Dialog1"

    mc:Ignorable="d"

    Title="Okno Formuarza" Height="450" Width="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="141*"/>
            <ColumnDefinition Width="259*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Podaj imię"/>
            <TextBox x:Name="txtImie" Margin="0,10,0,10"/>
            <TextBlock Text="Podaj nazwisko"/>
            <TextBox x:Name="txtNazwisko" Margin="0,10,0,10"/>
            <TextBlock Text="Podaj email"/>
            <TextBox x:Name="txtEmail" Margin="0,10,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOK" Content="OK" Width="80" Height="40" Margin="10" Click="btnOK_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="40" Margin="10" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>