<Window x:Class="Sprawdzian.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sprawdzian"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" Background="LightGoldenrodYellow">
            
            <!-- Pole dla imienia -->
            <Label Content="Imię: "/>
            <TextBox x:Name="dImie" Width="765" Background="LightGray"/>

            <!-- Pole dla nazwiska -->
            <Label Content="Nazwisko: "/>
            <TextBox x:Name="dNazwisko" Width="765" Background="LightGray"/>

            <!-- Pole dla emailu -->
            <Label Content="Email: "/>
            <TextBox x:Name="dEmail" Width="765" Background="lightgray"/>

            <!-- Wybór płci -->
            <Label Content="Płeć:" Margin="0,10,0,0" />
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="dPlecM" Content="Mężczyzna" IsChecked="True" Margin="5,0,20,0"/>
                <RadioButton x:Name="dPlecK" Content="Kobieta" />
            </StackPanel>

            <!-- Wybór wieku -->
            <Label Content="Wiek:" Margin="0,10,0,0" />
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="dWiekPelnoletni" Content="Pełnoletni" IsChecked="True" Margin="5,0,20,0"/>
                <RadioButton x:Name="dWiekNieletni" Content="Nieletni" />
            </StackPanel>

            <!-- Przycisk zapisu -->
            <Button x:Name="btnZapisz" Content="Zapisz" Width="150" Margin="0,20,0,0" Click="btnZapisz_Click"/>
        
            
        </StackPanel>

    </Grid>
</Window>
